@model IEnumerable<EducationTrackProject.Models.Module>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SequenceOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LearningObjectives)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SequenceOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LearningObjectives)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ModuleID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ModuleID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ModuleID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
