@model IEnumerable<EducationTrackProject.Models.Performance>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompletionPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvgScore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletionPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgScore)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProgressID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProgressID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProgressID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
